# Identity Service Configuration

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Service
SERVICE_NAME=identity-service
PORT=8002

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/identity_db

# Blockchain Configuration
BLOCKCHAIN_NETWORK=sepolia
RPC_URL=https://sepolia.infura.io/v3/6c474ab8fd5f48b294e1a082adc2c826
CHAIN_ID=11155111

# Contract Addresses (from deployment)
IDENTITY_FACTORY_ADDRESS=0x...
CLAIM_ISSUER_REGISTRY_ADDRESS=0x...

# Backend Signer (for issuing claims)
BACKEND_PRIVATE_KEY=0x...
BACKEND_ADDRESS=0x...

# Compliance Service Integration
COMPLIANCE_SERVICE_URL=http://localhost:8001

# Google Cloud
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
